.store_index.span9
  %h1 Ваша карта
  %table.table.table-striped.table-condensed.table-bordered.index_part_table
    %thead
      %tr
    
        %th=  t('spare_part.show_title')
        %th= t('spare_part.descriptions')
        %th= t('spare_part.price')
        %th Наличие
        %th=  t('spare_part.count')
    %tbody
      - @cart.line_items.each do |item|
        
        %tr
          %td= item.spare_part.title
          %td= item.spare_part.descriptions
          
          %td= number_to_currency(item.spare_part.price, unit: "UA", format:"%n %u")
          %td= item.spare_part.quantity
          %td#quan_cart
            = simple_form_for item , :html => { :class => 'form-  horizontal ' } do |f|
              = f.input :quantity , label: false 
              =f.button :submit, "доб"
  = button_to 'Удалить корзину', @cart, method: :delete, confirm: 'Вы уверены ?'

              
               
 