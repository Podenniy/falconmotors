!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title
      Falconmotors |
      = yield :title
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

    :javascript
      $(document).ready(function(){
        $('.carousel').carousel( 'slide' ,{
          interval: 2000
        });
      });
  %body
    .wrapper
      .header
        .hd-line
        .hd-bg
          .hd-cent
            .hd-left
              %h2

                %span.in_1
                  Интернет-магазин
                  %br/
                  %span.in_2
                    автозапчастей
                    %br/

              .social
                .soc-item{onclick: "window.open('https://facebook.com')"}
                  %img{src: "/assets/fb.png"}/
                  На Фейсбуке
                .soc-item{onclick: "window.open('https://twitter.com')"}
                  %img{src: "/assets/twt.png"}/
                  На Твиттере


            .logo
              %a{href: "http://falconmotors.az/"}
                %img{src: "/assets/flogo.png"}/
            .hd-right

              .info_flcn
                .lgin_head
                  = link_to "Зарегистрироваться",new_registration_path(resource_name)
                  |
                  = link_to "Войти",new_user_session_path
                %ul
                  %li.g_tel
                    %span.cfr
                      (0432) 61-23-48
                  %li.m_tel
                    %span.cfr
                      (+380) 9345678
                  %li.email_b

                    %span
                      falcon.vinnica@gmail.com


            .clear
      .grad
      .bg_ypon
      .index-cont
        .shad-l

        =render "layouts/share/search_spare_article"
        .shad-r
        %div{style: "clear:both;"}
        .store_index{style: "#{"padding-top: 280px;" if current_page?(store_url)}"}
          .fone
            .img_fon
          -if current_page?(store_url)
            #slider_box.carousel.slide
              =render "layouts/share/for_slider_box.html.haml"
          .falcon_side
            =render "layouts/share/side_cont.html.haml"

          .falcon_box{style: "#{"background: none;" if current_page?(store_url)}"}
            -if notice
              #notise_id
                = bootstrap_flash
            = yield
            #cart_wrap
          .clear

          %div{style: "clear:both;"}
          .allcar
            Смотреть всем
      .footer
        .bot-logo
          %a{href: "http://falconmotors.az/"}
            %img{src: "http://falconmotors.az//css/images/bottom-logo.png"}/
            google-site-verification: google782a3aa1fcb3c5b5.html
        .footer-cent


