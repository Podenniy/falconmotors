= simple_form_for @spare_part, :html => { :multipart => true ,:class => 'form-horizontal form_spare_part' } do |f|
  = f.input :title
  = f.input :descriptions
  
  = image_tag(@spare_part.image_url) if @spare_part.image?
  = f.input :image
  = f.hidden_field :image_cache
  = f.input :quantity
  = f.input :price
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), spare_parts_path, :class => 'btn'
