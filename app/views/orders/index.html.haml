#search_order 

  %table.table.table-bordered
    %tr 
      %th.dt
        Дата
      %th.dt
        Заказ
        %br/ 
        (номер)
      %th.sxl_1
        Фирма
      %th.sxl_1 
        Артикул
      %th.sxxx_1
        Описание
      %th 
        Кол
      %th
        Цена
      %th
        Сумма 
      %th 
        Оплата
      %th 
        Статус
      
    
    - @orders.each do |order|
      %tr.t_2
        %td.md.dt_2
          = order.created_at.to_date
        %td.md
          = order.id
        %td{colspan: "8", class: "ord"}
          %table
            - order.line_items.each do |line|
              %tr 
                %td.b_n.sxl 
                  = line.price_part.spare_part.brend.title
                %td.sxl 
                  = line.price_part.spare_part.title
                %td.sxxx
                  = line.price_part.spare_part.descriptions
                %td.cl
                  = line.quantity
                %td 
                  = line.price 
                %td 
                  = line.total_price
        
        

  %br

  = link_to 'New Order', new_order_path
  %p 
    = will_paginate @orders
